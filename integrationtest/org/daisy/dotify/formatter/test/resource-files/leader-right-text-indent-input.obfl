<?xml version="1.0" encoding="UTF-8"?>
<obfl xmlns="http://www.daisy.org/ns/2011/obfl" version="2011-1" xml:lang="und" hyphenate="false">
   <meta xmlns:dc="http://purl.org/dc/elements/1.1/">
      <dc:title>Right text indent</dc:title>
      <dc:description>Tests a leader on the last line of a block that is indented on the right side for all the other lines. Tests both right alignment and left aligment. Tests both with a leader that is aligned to the right edge of the page and with a leader that is aligned to a position that is further than 'right-text-indent' cells away from the right edge of the page.</dc:description>
   </meta>
   <layout-master name="a" duplex="false" page-width="20" page-height="20">
      <default-template>
         <header/>
         <footer/>
      </default-template>
   </layout-master>
   <sequence master="a">
      <!--
          right alignment
      -->
      <!--
          indentation of last line smaller than indentation of other lines
      -->
      <block right-text-indent="4">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿<leader pattern="⠤" position="20" align="right"/>⠿⠿</block>
      <block right-text-indent="2">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​​⠿<leader pattern="⠤" position="20" align="right"/>⠿⠿</block>
      <block right-text-indent="2">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​​⠿ <leader pattern="⠤" position="20" align="right"/>⠿⠿</block>
      <!--
          indentation of last line bigger than indentation of other lines
      -->
      <block right-text-indent="4">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿<leader pattern="⠤" position="10" align="right"/>⠿⠿</block>
      <block right-text-indent="4">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿<leader pattern="⠤" position="10" align="right"/>⠿⠿</block>
      <!--
          left alignment
      -->
      <!--
          indentation of last line smaller than indentation of other lines
      -->
      <block break-before="page"/>
      <block right-text-indent="4">⠿​⠿​⠿​⠿<leader pattern="⠤" position="17" align="left"/>⠿⠿</block>
      <block right-text-indent="4">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿<leader pattern="⠤" position="17" align="left"/>⠿⠿</block>
      <!--
          indentation of last line bigger than indentation of other lines
      -->
      <block right-text-indent="4">⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​⠿​<leader pattern="⠤" position="10" align="left"/>⠿⠿</block>
   </sequence>
</obfl>
